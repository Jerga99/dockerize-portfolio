<% form_state = current_user.is_a?(GuestUser) ? 'disabled' : '' %>
<% comment_label = current_user.is_a?(GuestUser) ? 'To write comment you need to log in' : 'Write Comment' %>
<%= form_for @comment, url: '#' do |f| %>
  <div class=<%= form_state %>>
    <div class="form-group">
      <%= f.label :content, comment_label, class: "comment-label" %>
      <%= f.text_area :content, class: "form-control" %>
    </div>

    <%= f.submit "Post Comment", class: "btn btn-primary #{form_state}" %>
  </div>
<% end %>

