<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to(blog.title, blog_path(blog)) %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words blog.created_at, Time.now %> by <a href="#">AUTHHOR!!!</a></p>
  <%= render partial: "blogs/admin_actions", locals: {blog: blog} %>
  <p><%= truncate blog.body, length: 512 %></p>
</div>
